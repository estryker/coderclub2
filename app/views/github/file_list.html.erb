<div class="container">

  <h2> CoderClub Files on Github </h2>

   <% if @file_names.empty? %>
     <div class="row">
       <div class="col-md-12"> <h4> You don't have any saved files. Save a file to Github from this link: <%= link_to "Ruby Editor", try_ruby_path %> </div> </h4> </div>
     </div>
   <% else %>
     <div class="row">
       <div class="col-md-2"> <h3> FileName </h3> </div>
       <div class="col-md-4"> <h3> Open File </h3></div>
     </div>
     <% @file_names.each do | fname | %>
       <div class="row">
         <div class="col-md-2"><h4> <%= fname %> </h4> </div>
         <div class="col-md-2"><%= link_to "CoderClub", try_ruby_path + "/github/#{fname}", class: 'btn btn-primary' %> </div>
         <div class="col-md-2"><%= link_to "Github", "https://github.com/#{@github_username}/#{repo_name}/blob/master/#{fname}", class: 'btn btn-primary' %> </div>
       </div>
     <% end %>
   <% end %>
  </table>
</div>
