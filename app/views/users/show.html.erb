<div class="container" >

  <h3> Basic Info </h3>
  
  <div class="row" id="wrapper">
    <div class="col-md-2"> 
      Name:
    </div>
    <div class="col-md-2"> 
      <%= @user.name %>
    </div>
  </div>
  
  
  <div class="row" id="wrapper">
    <% if signed_in? and (@user == current_user) %>
    <div class="col-md-1">  
      <%= button_to "Sign Out", signout_path + "/github" , :method=>:delete, :class => "btn btn-primary"  %> 
    </div>
    <% end %>
    <div class="col-md-2">  
      <%= button_to "Change Info", edit_user_path(@user),  :action => 'edit', :id => @user, :class => "btn btn-primary", :method => :get %> 
    </div>
    
  </div>
</div>

